model invoice {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  idTag String
  createdAt DateTime @default(now())
  paymentDue DateTime
  description String
  paymentTerms Int
  clientName String
  clientEmail String
  status String
  senderAddress Address
  clientAddress Address
  items Item[]
  total Float
}

type Address {
  street String
  city String
  postCode String
  country String
}

type Item {
  name String
  quantity Int
  price Float
  total Float
}

